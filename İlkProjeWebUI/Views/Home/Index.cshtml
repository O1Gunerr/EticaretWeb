
@using İlkProjeWebUI.Models
@model IEnumerable<ProductModel>
@{
    ViewBag.Title = "Ana Sayfa";
}

<section style="height: 500px; background-image: url('@Url.Content("~/Uploads/bg.jpg")'); background-size: cover; background-position: center; background-repeat: no-repeat;" class="d-flex align-items-center justify-content-center text-center text-white">
    <div>
        <h1 class="display-4 fw-bold">Yeni Nesil Samsung Ürünleri</h1>
        <p class="lead">Gelişmiş teknolojiye sahip cihazları şimdi keşfedin.</p>
        <a href="@Url.Action("List", "Home")" class="btn btn-light btn-lg mt-3">Ürünleri Gör</a>
    </div>
</section>
<section class="py-5 bg-light">
    <div class="container">
        <!-- Sayfa Başlığı -->
        <h2 class="text-center fw-bold mb-5">Popüler Ürünler</h2>

        <!-- Ürün Kartları -->
        <div class="row g-4">
            @foreach (var urun in Model)
            {
                <div class="col-lg-4 col-md-6">
                    <div class="card h-100 shadow-sm border-0">
                        <img src="~/Uploads/@urun.Image"
                             class="card-img-top img-fluid"
                             alt="@urun.Name"
                             style="height: 250px; width: 100%; object-fit: contain;" />

                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title">@urun.Name</h5>
                            <p class="card-text flex-grow-1">
                                @(urun.Description.Length > 100
                    ? urun.Description.Substring(0, 100) + "…"
                    : urun.Description)
                            </p>
                            <div class="mt-auto d-flex justify-content-between align-items-center">
                                <span class="h5 text-primary">@urun.Price.ToString("N2") ₺</span>
                                <a href="@Url.Action("Details","Home", new { id = urun.Id })"
                                   class="btn btn-sm btn-outline-primary">
                                    Detay
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>
