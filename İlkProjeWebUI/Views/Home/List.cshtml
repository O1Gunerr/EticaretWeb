@using İlkProjeWebUI.Models
@model IEnumerable<ProductModel>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Ürünler";
}

<div class="container py-4">
    <div class="row">
        <div class="col-md-3 mb-4">
            <div class="list-group shadow-sm">
                <a href="@Url.Action("List", "Home")"
                   class="list-group-item list-group-item-action @(string.IsNullOrEmpty(ViewBag.CurrentCategory) ? "active" : "")">
                    Tüm Kategoriler
                </a>
                <a href="@Url.Action("List", "Home", new { category = "Telefon" })"
                   class="list-group-item list-group-item-action @(ViewBag.CurrentCategory == "Telefon" ? "active" : "")">
                    Telefon
                </a>
                <a href="@Url.Action("List", "Home", new { category = "Bilgisayar" })"
                   class="list-group-item list-group-item-action @(ViewBag.CurrentCategory == "Bilgisayar" ? "active" : "")">
                    Bilgisayar
                </a>
                <a href="@Url.Action("List", "Home", new { category = "Elektronik" })"
                   class="list-group-item list-group-item-action @(ViewBag.CurrentCategory == "Elektronik" ? "active" : "")">
                    Elektronik
                </a>
                <a href="@Url.Action("List", "Home", new { category = "Televizyon" })"
                   class="list-group-item list-group-item-action @(ViewBag.CurrentCategory == "Televizyon" ? "active" : "")">
                    Televizyon
                </a>
                <a href="@Url.Action("List", "Home", new { category = "Beyaz Eşya" })"
                   class="list-group-item list-group-item-action @(ViewBag.CurrentCategory == "Beyaz Eşya" ? "active" : "")">
                    Beyaz Eşya
                </a>
            </div>
        </div>
        <div class="col-md-9">
            <h4 class="mb-4">
                @(
                    !string.IsNullOrEmpty(ViewBag.CurrentCategory)
                        ? ViewBag.CurrentCategory + " Ürünleri"
                        : "Tüm Ürünler"
                )
            </h4>
            <div class="row">
                @foreach (var urun in Model)
                {
                    <div class="col-lg-4 col-md-6 col-sm-12 mb-4">
                        <div class="card product-card shadow-sm border-0 h-100">
                            <img class="card-img-top img-fluid" style="object-fit: contain;"
                                 src="~/Uploads/@urun.Image"
                                 alt="@urun.Name"
                                 style="height:220px; object-fit:cover; border-radius: .5rem .5rem 0 0;" />
                            <div class="card-body d-flex flex-column">
                                <h5 class="card-title fw-bold">@urun.Name</h5>
                                <p class="card-text text-muted mb-2" style="flex-grow: 1;">
                                    @urun.Description
                                </p>
                                <div class="d-flex justify-content-between align-items-center mt-auto">
                                    <span class="text-danger fw-bold">@urun.Price ₺</span>
                                    <a href="@Url.Action("Details", "Home", new { id = urun.Id })"
                                       class="btn btn-sm btn-outline-primary">
                                        Detaylar
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
