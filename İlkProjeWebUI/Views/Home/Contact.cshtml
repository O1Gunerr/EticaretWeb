@{
    ViewBag.Title = "İletişim";
}

<div class="container py-5">
    <h1>İletişim</h1>

    @if (ViewBag.Error != null)
    {
        <div class="alert alert-danger">@ViewBag.Error</div>
    }
    @if (ViewBag.Success != null)
    {
        <div class="alert alert-success">@ViewBag.Success</div>
    }

    @using (Html.BeginForm("Contact", "Home", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        <div class="mb-3">
            <label for="name" class="form-label">Adınız</label>
            <input type="text" class="form-control" id="name" name="name" placeholder="Adınızı girin" />
        </div>
        <div class="mb-3">
            <label for="email" class="form-label">E-posta</label>
            <input type="email" class="form-control" id="email" name="email" placeholder="E-posta adresinizi girin" />
        </div>
        <div class="mb-3">
            <label for="message" class="form-label">Mesajınız</label>
            <textarea class="form-control" id="message" name="message" rows="5" placeholder="Mesajınızı yazın"></textarea>
        </div>
        <button type="submit" class="btn btn-primary">Gönder</button>
    }
</div>
