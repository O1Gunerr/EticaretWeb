@using İlkProjeWebUI.Entity
@model Product

@{
    ViewBag.Title = "Ürün Detayı";
}

<div class="container py-5">
    <div class="row g-4">
        <div class="col-md-6">
            <img src="~/Uploads/@Model.Image" alt="@Model.Name"  class="img-fluid rounded shadow-sm w-100 "  style="object-fit:contain ; max-height:400px;" />
        </div>
        <div class="col-md-6 d-flex flex-column">
            <h1 class="display-5 fw-bold">@Model.Name</h1>
            <span class="badge bg-success mb-2">Stokta</span>
            <span class="text-muted mb-3 d-block">Ürün Kodu: #@Model.Id</span>
            <p class="text-muted mb-4" style="line-height: 1.6;">@Model.Description</p>

            <div class="mb-3">
                <span class="text-warning">
                    <i class="fas fa-star"></i><i class="fas fa-star"></i><i class="fas fa-star"></i><i class="fas fa-star-half-alt"></i><i class="far fa-star"></i>
                </span>
                <a href="#" class="ms-2 text-info">Yorum yaz</a>
            </div>

            <h3 class="text-danger fw-bold">@Model.Price ₺</h3>

            @using (Html.BeginForm("AddToCart", "Cart"))
            {
                @Html.HiddenFor(i => i.Id)

                <button type="submit" class="btn btn-success btn-lg mt-3 px-4 py-2">Sepete Ekle</button>

            }
          

        </div>
    </div>

    <ul class="nav nav-tabs mt-5" id="tabMenu" role="tablist">
        <li class="nav-item" role="presentation">
            <button class="nav-link active" id="ozellik-tab" data-bs-toggle="tab" data-bs-target="#ozellikler" type="button" role="tab" aria-controls="ozellikler" aria-selected="true">Özellikler</button>
        </li>
        <li class="nav-item" role="presentation">
            <button class="nav-link" id="yorum-tab" data-bs-toggle="tab" data-bs-target="#yorumlar" type="button" role="tab" aria-controls="yorumlar" aria-selected="false">Yorumlar</button>
        </li>
        <li class="nav-item" role="presentation">
            <button class="nav-link" id="teknik-tab" data-bs-toggle="tab" data-bs-target="#teknik" type="button" role="tab" aria-controls="teknik" aria-selected="false">Teknik Bilgi</button>
        </li>
    </ul>

    <div class="tab-content border border-top-0 p-4" id="tabContent">
        <div class="tab-pane fade show active" id="ozellikler" role="tabpanel" aria-labelledby="ozellik-tab">
            <p>Bu üründe üstün performans, uzun pil ömrü ve modern tasarım bir arada sunuluyor.</p>
        </div>
        <div class="tab-pane fade" id="yorumlar" role="tabpanel" aria-labelledby="yorum-tab">
            <p>Henüz yorum yapılmadı. İlk siz yapın!</p>
        </div>
        <div class="tab-pane fade" id="teknik" role="tabpanel" aria-labelledby="teknik-tab">
            <p>Ağırlık: 230g<br />İşletim Sistemi: Android<br />Garanti: 24 Ay</p>
        </div>
    </div>
</div>
