@using İlkProjeWebUI.Models
@model IEnumerable<ProductModel>

<div class="row">
    @foreach (var urun in Model)
    {
        <div class="col-lg-4 col-md-6 col-sm-12 mb-4">
            <div class="card product-card shadow-lg border-0 h-100 transition-transform">

                <!-- Resim: inline style kaldırıldı, CSS’ten kontrol edilecek -->
                <img class="card-img-top img-fluid" src="~/Uploads/@urun.Image" alt="@urun.Name" />

                <div class="card-body d-flex flex-column">
                    <h5 class="card-title text-dark fw-semibold">@urun.Name</h5>
                    <p class="card-text text-muted small mb-3" style="flex-grow: 1;">
                        @(
                            urun.Description.Length > 90
                                ? urun.Description.Substring(0, 90) + "..."
                                : urun.Description
                        )
                    </p>
                    <div class="d-flex justify-content-between align-items-center mt-auto">
                        <span class="text-gold fw-bold fs-5">@urun.Price.ToString("N2") ₺</span>
                        <a href='@Url.Action("Details", "Home", new { id = urun.Id })'
                           class="btn btn-outline-primary btn-sm">
                            <i class="fas fa-info-circle me-1"></i> Detay
                        </a>
                    </div>
                </div>

            </div>
        </div>
    }
</div>
