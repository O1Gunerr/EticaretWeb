@inherits System.Web.Mvc.WebViewPage<dynamic>
@using System.Web.Optimization
@using System.Web.Routing

@{
    var title = ViewBag.Title as string ?? "Admin Paneli";
    Layout = null;

    string activeController = ViewContext.RouteData.Values["controller"].ToString();
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width,initial-scale=1" />
    <title>@title - Admin Paneli</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
          rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css"
          rel="stylesheet" />
    <link href="~/theme/css/style.css" rel="stylesheet" />
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
            <a class="navbar-brand d-flex align-items-center" href="@Url.Action("Index","Admin")">
                <i class="fas fa-cog me-2"></i>
                <span class="fw-bold">Admin Paneli</span>
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#adminNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="adminNav">
                <ul class="navbar-nav ms-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                        <a class="nav-link @(activeController=="Products"?"active":"")"
                           href="@Url.Action("Index","Products")">
                            <i class="fas fa-box"></i> Ürünler
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link @(activeController=="Category"?"active":"")"
                           href="@Url.Action("Index","Category")">
                            <i class="fas fa-tags"></i> Kategoriler
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link @(activeController=="Orders"?"active":"")"
                           href="@Url.Action("Index","Orders")">
                            <i class="fas fa-shopping-basket"></i> Siparişler
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link @(activeController=="Account"?"active":"")"
                           href="@Url.Action("Logout","Account")">
                            <i class="fas fa-sign-out-alt"></i> Çıkış Yap
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <div class="container mt-4">
        @RenderBody()
    </div>

    <footer class="border-top text-center py-3 mt-5">
        &copy; @DateTime.Now.Year — Admin Paneli
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("scripts", required: false)
</body>
</html>
